<div class="container h-100 d-flex align-items-center flex-column justify-content-center">
       <div class="pb-5">
            <h1 class="text-decoration-underline">Heippi Clinic</h1>
        </div>
    <div class="row w-50 p-3 bg-white shadow">
     
        <div class="col-12 p-3">
            <form action="/logIn" method="post">
                <div class="mb-3">
                    <label class="form-label">Identification</label>
                    <input type="text" class="form-control" name="identification" placeholder="123...">
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <p class="text-danger">{{error}}</p>
                <button type="submit" class="btn btn-primary">Sign in</button>
                <a class="btn btn-primary" href="/singUp">Sign Up</a>
            </form>
        </div>
    </div>
</div>